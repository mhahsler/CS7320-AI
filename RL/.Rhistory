MC_off_policy <-
function(N = 100,
epsilon = 0.1,
gamma = 1,
verbose = FALSE) {
# Initialize
Q <-
matrix(0,
nrow = length(S),
ncol = length(A),
dimnames = list(S, A))
C <-  matrix(0L,
nrow = length(S),
ncol = length(A),
dimnames = list(S, A))
pi <- greedy_policy(Q)
# Loop through N episodes
for (e in seq(N)) {
b <- create_random_epsilon_soft_policy(epsilon)
s_0 <- start
ep <- simulate_episode(b, s_0)
if (verbose) {
cat(paste("*** Episode", e, "***\n"))
print(ep)
}
G <- 0
W <- 1
for (i in rev(seq(nrow(ep)))) {
r_t_plus_1 <- ep$r[i]
s_t <- ep$s[i]
a_t <- ep$a[i]
G <- gamma * G  + r_t_plus_1
C[s_t, a_t] <- C[s_t, a_t] + W
Q[s_t, a_t] <-
Q[s_t, a_t] + (W / C[s_t, a_t]) * (G - Q[s_t, a_t])
pi[s_t] <- greedy_action(s_t, Q)
if (a_t != pi[s_t])
break
W <- W * 1 / b[s_t, a_t]
}
}
list(Q = Q,
pi = pi)
}
